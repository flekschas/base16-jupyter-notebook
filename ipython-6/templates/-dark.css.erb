/*

    Name:       Base16 <%= @scheme %> Light
    Author:     <%= @author %>

    CodeMirror template adapted for IPython Notebook by Nikhil Sonnad (https://github.com/nsonnad/base16-ipython-notebook)
    CodeMirror template by Jan T. Sott (https://github.com/idleberg/base16-chrome-devtools)
    Original Base16 color scheme by Chris Kempson (https://github.com/chriskempson/base16)

*/

/* Uncomment to use a custom font */
div#notebook, div.CodeMirror, div.output_area pre, div.output_wrapper, div.prompt {
  font-family: 'Source Code Pro', monospace !important;
}

/* GLOBALS */
body {
    background-color: #<%= @base["00"]["hex"] %>;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
a {color: #<%= @base["0D"]["hex"] %>;}

/* INTRO PAGE */
.toolbar_info, .list_container {color: #<%= @base["06"]["hex"] %>;}

/* NOTEBOOK */

/* comment out this line to bring the toolbar back */

#notebook {
    border-top: none;
}

div.input_prompt {color: #<%= @base["0F"]["hex"] %>;}
div.output_prompt {color: #<%= @base["0E"]["hex"] %>;}
div.input_area {
  border-radius: 0px;
  border: 1px solid #<%= @base["02"]["hex"] %>;
}
div.output_area pre {font-weight: normal; color: #<%= @base["05"]["hex"] %>;}

.rendered_html table, .rendered_html th, .rendered_html tr, .rendered_html td {
  border: 1px  #<%= @base["05"]["hex"] %> solid;
  color: #<%= @base["05"]["hex"] %>;
}
div.output_html { font-family: sans-serif; }
table.dataframe tr {border: 1px #<%= @base["05"]["hex"] %>;}

div.cell.selected {border-radius: 0px;}
div.cell.edit_mode {border-radius: 0px; border: thin solid #<%= @base["0E"]["hex"] %>;}
div.text_cell_render, div.output_html {color: #<%= @base["05"]["hex"] %>;}

span.ansiblack,
span.ansi-black-fg,
span.ansi-black-intense-fg {color: #<%= @base["01"]["hex"] %>;}
span.ansiblue,
span.ansi-blue-fg,
span.ansi-blue-intense-fg {color: #<%= @base["0C"]["hex"] %>;}
span.ansigray,
span.ansi-gray-fg,
span.ansi-gray-intense-fg {color: #<%= @base["04"]["hex"] %>;}
span.ansigreen,
span.ansi-green-fg,
span.ansi-green-intense-fg {color: #<%= @base["0B"]["hex"] %>;}
span.ansipurple,
span.ansi-purple-fg,
span.ansi-purple-intense-fg {color: #<%= @base["0E"]["hex"] %>;}
span.ansired,
span.ansi-red-fg,
span.ansi-red-intense-fg {color: #<%= @base["08"]["hex"] %>;}
span.ansiyellow,
span.ansi-yellow-fg,
span.ansi-yellow-intense-fg {color: #<%= @base["0A"]["hex"] %>;}

div.output_stderr {background-color: #<%= @base["08"]["hex"] %>;}
div.output_stderr pre {color: #<%= @base["06"]["hex"] %>;}

.cm-s-ipython.CodeMirror {background: #<%= @base["00"]["hex"] %>; color: #<%= @base["06"]["hex"] %>;}
.cm-s-ipython div.CodeMirror-selected {background: #<%= @base["01"]["hex"] %> !important;}
.cm-s-ipython .CodeMirror-gutters {background: #<%= @base["00"]["hex"] %>; border-right: 0px;}
.cm-s-ipython .CodeMirror-linenumber {color: #<%= @base["03"]["hex"] %>;}
.cm-s-ipython .CodeMirror-cursor {border-left: 1px solid #<%= @base["04"]["hex"] %> !important;}

.cm-s-ipython span.cm-comment {color: #<%= @base["0F"]["hex"] %>;}
.cm-s-ipython span.cm-atom {color: #<%= @base["0E"]["hex"] %>;}
.cm-s-ipython span.cm-number {color: #<%= @base["0E"]["hex"] %>;}

.cm-s-ipython span.cm-property, .cm-s-ipython span.cm-attribute {color: #<%= @base["0B"]["hex"] %>;}
.cm-s-ipython span.cm-keyword {color: #<%= @base["08"]["hex"] %>;}
.cm-s-ipython span.cm-string {color: #<%= @base["0A"]["hex"] %>;}
.cm-s-ipython span.cm-operator {color: #<%= @base["0F"]["hex"] %>;}
.cm-s-ipython span.cm-builtin {color: #<%= @base["0E"]["hex"] %>;}

.cm-s-ipython span.cm-variable {color: #<%= @base["0B"]["hex"] %>;}
.cm-s-ipython span.cm-variable-2 {color: #<%= @base["0D"]["hex"] %>;}
.cm-s-ipython span.cm-def {color: #<%= @base["09"]["hex"] %>;}
.cm-s-ipython span.cm-error {background: #<%= @base["08"]["hex"] %>; color: #<%= @base["04"]["hex"] %>;}
.cm-s-ipython span.cm-bracket {color: #<%= @base["05"]["hex"] %>;}
.cm-s-ipython span.cm-tag {color: #<%= @base["08"]["hex"] %>;}
.cm-s-ipython span.cm-link {color: #<%= @base["0E"]["hex"] %>;}

.cm-s-ipython .CodeMirror-matchingbracket { text-decoration: underline; color: #<%= @base["06"]["hex"] %> !important;}



/* Fritz's customizations */

/*Otherwise, a lot of backgrounds are white.*/
div#notebook {
    background-color: #<%= @base["00"]["hex"] %>;
    border-top: none;
}
div#notebook-container {
    background-color: #<%= @base["01"]["hex"] %>;
    box-shadow: 0px 0px 12px 1px rgba(0, 0, 0, 0.33);
}

/*Don't need to see jupyter logo, filename, last saved, etc.*/
#header-container,
#header > .header-bar, {
    display: none !important;
}

div.prompt.input_prompt,
div.prompt.output_prompt {
    font-size: 12px;
    text-align: left;
}

div.prompt.input_prompt bdi,
div.prompt.output_prompt bdi {
    display: block;
    text-align: left;
    margin-left: 0.75em;
    font-size: 11px;
}

/*This prevents scrollable output from having an ugly grey
shadow around it*/
div.output.output_scroll {
    box-shadow: none;
}

/*Scroll bars*/
::-webkit-scrollbar {
    width: 1em;
}

::-webkit-scrollbar-track {
    background: #<%= @base["00"]["hex"] %>;
}

::-webkit-scrollbar-thumb {
    border: 0.25em solid rgba(0, 0, 0, 0);
    border-radius: 0.5em;
    background: rgba(255, 255, 255, 0.2);
    background-clip: padding-box;
}


/* give strings a bit of highlight */
.cm-s-ipython span.cm-string {
    color: #f9ee98;
    padding-left: 2px;
    padding-right: 2px;
    background-color: rgba(249, 238, 152, 0.05);
    border-radius: 3px;
}

/* Make comments grey, not italic, and give them an easy background */
.cm-s-ipython span.cm-comment {
    color: #<%= @base["03"]["hex"] %>;
}

/* change the color of the cursor */
.cm-s-ipython .CodeMirror-cursor {
    width: 2px;
    background-color: #<%= @base["09"]["hex"] %>;
    /* margin-top: 2px; */
}

.code_cell > .input > .inner_cell > .input_area {
    background-color: #<%= @base["01"]["hex"] %>;
}

.cm-s-ipython.CodeMirror {
    border-radius: 4px;
}

div.cell.selected {
    border-color: #<%= @base["0D"]["hex"] %>;
    border-radius: 6px;
}

.CodeMirror-code  {
    line-height: 1.375;
}

div.output_text {
    border-left: 4px solid #<%= @base["03"]["hex"] %>;
    border-bottom-right-radius: 4px;;
}

div.output_error {
    /* base["07"] */
    border-left-color: rgba(240, 113, 120, 0.33);
    background: rgba(240, 113, 120, 0.1);
}

div.out_prompt_overlay:hover {
    background: rgba(240, 240, 240, 0.1);
}
